{
  "name": "craspice",
  "version": "0.1.0",
  "private": true,
  "homepage": "/",
  "author": "icynoangel",
  "description": "CRA template with Redux, Intl (with sample components and unit tests)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "enzyme-to-json": "^3.5.0",
    "express": "^4.17.1",
    "fetch-mock": "^9.10.7",
    "husky": "^4.3.0",
    "intl": "^1.2.5",
    "jest-localstorage-mock": "^2.4.3",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.12.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^2.9.0",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-requests": "^1.0.2",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "TZ=America/New_York react-scripts test",
    "test:update": "TZ=America/New_York react-scripts test --updateSnapshot",
    "coverage": "TZ=America/New_York CI=true react-scripts test --coverage --no-cache --bail",
    "eslint": "eslint ./ --no-cache",
    "beautify": "prettier --write 'src/**/*.js'",
    "devserver": "node_modules/nodemon/bin/nodemon.js src/server/server.js dev",
    "server": "node src/server/server.js",
    "dev": "npm run start | npm run devserver"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run beautify && CI=true npm run coverage && git add --all"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.js",
      "!src/serviceWorker.js",
      "!src/**/index.js",
      "!src/api/**/*.js",
      "!src/constants/*.js",
      "!src/testsHelper.js",
      "!src/server/server.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "babel-loader": "^8.0.6"
  }
}
